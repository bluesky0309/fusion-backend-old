{
    "compilerOptions": {
        "target": "es6", // Specify ECMAScript target version
        "module": "commonjs", // Node.js uses CommonJS module system
        "outDir": "./dist", // Output directory for compiled files
        "rootDir": "./src", // Root directory of the source files
        "strict": true, // Enable all strict type-checking options
        "esModuleInterop": true, // Enable emit interoperability between CommonJS and ES modules
        "skipLibCheck": true, // Skip type checking of declaration files
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*.ts"
    ], // Include TypeScript files
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ] // Exclude test files or specific patterns
}